<odoo>
  <data>
    <record id="action_ecole_filiere" model="ir.actions.act_window">
        <field name="name">Filières</field>
        <field name="res_model">ecole.filiere</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_ecole_filiere_list" model="ir.ui.view">
        <field name="name">ecole.filiere.list</field>
        <field name="model">ecole.filiere</field>
        <field name="arch" type="xml">
            <list string="Liste des filières">
                <field name="ID_filiere"/>
                <field name="intitule"/>
                <field name="code"/>
                <field name="cycle"/>
            </list>
        </field>
    </record>

    <record id="view_ecole_filiere_form" model="ir.ui.view">
        <field name="name">ecole.filiere.form</field>
        <field name="model">ecole.filiere</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="changerCycle" type="object" string="Changer Cycle" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <field name="ID_filiere"/>
                        <field name="intitule"/>
                        <field name="code"/>
                        <field name="cycle"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
  </data>
</odoo>