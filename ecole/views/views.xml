<odoo>
  <data>
    <record id="action_ecole_etudiant" model="ir.actions.act_window">
        <field name="name">Étudiants</field>
        <field name="res_model">ecole.etudiant</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_ecole_filiere" model="ir.actions.act_window">
        <field name="name">Filières</field>
        <field name="res_model">ecole.filiere</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_ecole_root" name="Ecole" sequence="-1"/>

    <menuitem id="menu_ecole_etudiant" name="Étudiants" parent="menu_ecole_root" action="action_ecole_etudiant"/>
    <menuitem id="menu_ecole_filiere" name="Filières" parent="menu_ecole_root" action="action_ecole_filiere"/>

    <record id="view_ecole_etudiant_list" model="ir.ui.view">
        <field name="name">ecole.etudiant.list</field>
        <field name="model">ecole.etudiant</field>
        <field name="arch" type="xml">
            <list> <field name="num_apogee"/>
                <field name="nom"/>
                <field name="prenom"/>
                <field name="filiere_id"/>
            </list>
        </field>
    </record>

  </data>
</odoo>